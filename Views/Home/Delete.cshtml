@model WebPharmecyDiscountdemo.Models.DTOs.DTODiscountCode
@{
    ViewData["Title"] = "Delete Discount Code";
}

<h2>Delete Discount Code</h2>
<hr />

<h4>Are you sure you want to delete this discount code?</h4>
<div class="border p-3 rounded">
    <dl class="row">
        <dt class="col-sm-3">Code</dt>
        <dd class="col-sm-9">@Model.Code</dd>

        <dt class="col-sm-3">Value</dt>
        <dd class="col-sm-9">@Model.Value</dd>

        <dt class="col-sm-3">Type</dt>
        <dd class="col-sm-9">@Model.ValueType</dd>

        <dt class="col-sm-3">Is Active</dt>
        <dd class="col-sm-9">@Model.IsActive</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
